<resources>

    <!-- Base application theme. Update only -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Update if necessary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light, sans-serif-condensed-light, sans-serif-thin</item>
    </style>

    <!-- Customize new themes here. -->
    <style name="FekTheme">
        <item name="android:colorPrimary">@color/navigationBarColor</item>
    </style>

    <style name="NavigationBarButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/navigationButtonsColor</item>
    </style>

    <style name="NavigationBarHeadingTheme" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/navigationButtonsColor</item>
    </style>

    <style name="MainPageHeadingTheme">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="MainPageProductDescriptionTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
